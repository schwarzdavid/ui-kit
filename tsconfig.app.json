{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    ".storybook/**/*",
    ".storybook/**/*.vue",
    "lib/**/*",
    "lib/**/*.vue"
  ],
  "exclude": [
    "lib/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["DOM", "ESNext"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"]
    }
  }
}
